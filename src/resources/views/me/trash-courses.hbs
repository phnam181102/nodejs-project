<div class="mt-4">
    <div class="d-flex justify-content-between">
        <div>
            <a href="/me/stored/courses">Quay lại</a>
            <h3>Khoá Học Đã Xoá</h3>
        </div>

    </div>

    <table class="table mt-4">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Name</th>
                <th scope="col">Created at</th>
                <th scope="col" colspan="2">Video ID</th>
            </tr>
        </thead>

        <tbody>
            {{#each courses}}
                <tr>
                    <th scope="row">{{sum @index 1}}</th>
                    <td>{{this.name}}</td>
                    <td>{{this.createdAt}}</td>
                    <td>{{this.videoId}}</td>
                    <td>
                        <a href="/courses/{{this._id}}/edit" class="btn btn-link">Restore</a>
                        <a
                            href=""
                            class="btn btn-link"
                            data-bs-toggle="modal"
                            data-bs-target="#delete-course-modal"
                            data-bs-id="{{this._id}}"
                        >Delete</a>
                    </td>
                </tr>
                {{else}}
                <tr>
                    <td colspan="5" class="text-center">
                        Thùng rác trống 
                    </td>
                </tr>
            {{/each}}
        </tbody>
    </table>
</div>

{{! Confirm delete course }}
<div
    class="modal fade"
    id="delete-course-modal"
    tabindex="-1"
    aria-labelledby="exampleModalLabel"
    aria-hidden="true"
>
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Confirm Delete</h5>
                <button
                    type="button"
                    class="close"
                    data-bs-dismiss="modal"
                    aria-label="Close"
                >&times;</button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete this course?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-danger" id="btn-delete-course">Delete</button>
            </div>
        </div>
    </div>
</div>

{{!-- Delete hidden form --}}
<form method="POST" name="delete-course-form"></form>

<script>
    document.addEventListener("DOMContentLoaded", function() {
        var courseId
        var deleteForm = document.forms["delete-course-form"]
        var btnDeleteCourse = document.getElementById('btn-delete-course')

        var exampleModal = document.getElementById('delete-course-modal')
        exampleModal.addEventListener('show.bs.modal', function (event) { 
            var button = event.relatedTarget 
            courseId = button.getAttribute('data-bs-id')  
            }
        )

        btnDeleteCourse.onclick = function (event) {
            deleteForm.action = `/courses/${courseId}?_method=DELETE`
            deleteForm.submit()
        }
    })


</script>